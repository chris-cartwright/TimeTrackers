<Window x:Class="TimeTrackers.PasswordPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTrackers"
        mc:Ignorable="d"
        Title="PasswordPrompt" Height="120.422" Width="299.296">
    <DockPanel LastChildFill="False" Margin="12">
        <TextBlock Text="Please enter your password:" DockPanel.Dock="Top" />
        <PasswordBox DockPanel.Dock="Top" Name="PasswordInput" />
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="Ok" Width="75" Margin="0,0,12,0" Click="Ok_Click" />
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
